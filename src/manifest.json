{
  "name": "Todo List - 任务清单",
  "description": "一个简单的本地化任务管理清单。",
  "version": "1.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/todo_16.png",
    "32": "icons/todo_32.png",
    "48": "icons/todo_48.png",
    "128": "icons/todo_128.png"
  },
  "action": {
    "default_title": "Todo List - 任务清单",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions":["storage", "unlimitedStorage"]
}
